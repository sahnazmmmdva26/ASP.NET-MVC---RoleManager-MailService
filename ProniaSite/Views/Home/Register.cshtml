@using ProniaSite.ViewModels.User

@{
    ViewData["Title"] = "Register";
}
@model UserRegisterVM

      <!-- Begin Main Content Area -->
      <main class="main-content">
        <div
          class="breadcrumb-area breadcrumb-height"
          data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg"
        >
          <div class="container h-100">
            <div class="row h-100">
              <div class="col-lg-12">
                <div class="breadcrumb-item">
                  <h2 class="breadcrumb-heading">Register</h2>
                  <ul>
                    <li>
                      <a asp-action="Index">Home</a>
                    </li>
                    <li>Register</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="login-register-area section-space-y-axis-100">
          <div class="container">
            <div class="row">
                <div class="col-lg-12 pt-5 pt-lg-0">
                <form method="post">
                  <div class="login-form">
                    <h4 class="login-title">Register</h4>
                    <div class="row">
                      <div class="col-md-6 col-12">
                        <label>First Name</label>
                        <input asp-for="Name" placeholder="First Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                      </div>
                      <div class="col-md-6 col-12">
                        <label>Last Name</label>
                         <input asp-for="Surname" placeholder="Last Name" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                      </div>
                       <div class="col-md-6 col-12">
                        <label>UserName</label>
                         <input asp-for="Username" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                      </div>
                      <div class="col-md-12">
                        <label>Email Address*</label>
                         <input asp-for="Email" placeholder="Email Address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                      </div>
                      <div class="col-md-6">
                        <label>Password</label>
                         <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                      </div>
                      <div class="col-md-6">
                        <label>Confirm Password</label>
                         <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                      </div>
                      <div asp-validation-summary="ModelOnly"></div>
                      <a asp-action="Login">Do you already have account?</a>
                      <div class="col-12">
                        <button
                          class="btn btn-custom-size lg-size btn-pronia-primary"
                        >
                          Register
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>

            </div>
          </div>
        </div>
      </main>
      <!-- Main Content Area End Here -->

