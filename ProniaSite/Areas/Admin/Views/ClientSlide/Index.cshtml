<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Bordered table</h4>
                  <p class="card-description">
                    Add class <code>.table-bordered</code>
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            #
                          </th>
                          <th>
                            Fullname
                          </th>
                           <th>
                            Image
                          </th>
                           <th>
                            Comment
                          </th>
                          <th>

                          </th>
                          <th>

                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (ClientSlide item in Model)
                        {
                                <tr>
                                  <td>
                                    @item.Id
                                  </td>
                                  <td>
                                    @item.Fullname
                                  </td>
                                       <td>
                                    @item.Image
                                      </td>
                                           <td>
                                    @item.Comment
                                      </td>
                                  <td>
                                      <a class="btn btn-info" asp-area="Admin" asp-controller="ClientSlide" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                  </td>
                                  <td>
                                    <a class="btn btn-danger"  asp-area="Admin" asp-controller="ClientSlide" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                  </td>
                                </tr>

                        }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
